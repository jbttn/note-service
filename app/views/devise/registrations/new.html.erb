<div id="devise-container" class="paper-container">
  <h2>Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label :username %>
    <%= f.text_field :username, placeholder: 'Username' %></div>

    <div><%= f.label :email %>
    <%= f.email_field :email, placeholder: 'E-Mail' %></div>

    <div><%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password' %></div>

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %></div>

    <div><%= f.submit "Sign up", class: 'btn btn-primary' %></div>
  <% end %>

  <%= render "links" %>
</div>
