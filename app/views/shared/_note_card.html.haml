%li.card
  .card-content
    .card-header
      .card-title= link_to note.title, note
      .card-author= "By #{note.owner.username}"
    .card-note
      -#= pin_item_display pin, 'item-thumbnail-image-large'
      %pre= truncate(note.content, length: 100)
    .card-metadata
      .card-label
        %i.icon-tag
        -if !note.label.nil?
          = link_to note.label.name, note.label
        - else
          None
      .card-options
        = link_to '', edit_note_path(note), class: 'icon-edit'
        = link_to '', note, method: :delete, confirm: 'Are you sure you want to delete this note?', class: 'icon-trash'