#dashboard.row
  = render 'sidebar'
  .span9.stretch-container
    #dashboard-main.paper-container
      .dashboard-section
        %h2 Recent Notes
        %ul.cards
          - current_user.notes.recent.limit(6).each do |note|
            -#%li= link_to "#{note.title}", note
            = render 'shared/note_card', note: note
        -#%h2 Global
        -#%ul
          - Note.recent.limit(5).each do |note|
            %li= link_to "#{note.title} - by #{note.owner.username}", note