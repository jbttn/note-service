#dashboard.row
  .span3.paper-container
    #dashboard-user.dashboard-section
      #dashboard-user-left
        = image_tag current_user.gravatar_url
      #dashboard-user-right
        %h1#dashboard-username= link_to current_user.username, current_user
        %p= "#{current_user.owned_tags.count} tags"
    .dashboard-section
      %h1 Navigation
      %ul.nav.nav-list
        %li
          %a{href: root_path}
            %i.icon-home
            Explore
        %li
          %a{href: root_path}
            %i.icon-home
            Explore
    .dashboard-section
      %h1 Activity
      %h2 You
      %ul
        - current_user.notes.recent.limit(5).each do |note|
          %li= link_to "#{note.title} - by #{note.owner.username}", note
      %h2 Global
      %ul
        - Note.recent.limit(5).each do |note|
          %li= link_to "#{note.title} - by #{note.owner.username}", note
      %h2 Your Tags
      %ul
        - current_user.owned_tags.each do |tag|
          %li= link_to tag, tag_path(tag.name)
  .span8.paper-container
    %h1 Quick Note
    = form_for(Note.new, :as => :note, :url => notes_path) do |f|
      = f.text_field :title, placeholder: 'Untitled', class: 'span8'
      = f.text_field :tag_list, placeholder: 'Tags, Ex: work, school, todos', class: 'span8'
      = f.text_area  :content, placeholder: 'Content', size: '30x20', class: 'span8'
      = f.submit 'Create', class: 'btn btn-primary btn-large span8', style: 'width: 100%;'