.row
  .span6.stretch-container
    #note-editor.paper-container
      = form_for(@note, as: :note, url: @note) do |f|
        = render 'notes/fields', f: f
        = f.submit 'Update', class: 'btn btn-primary btn-large', style: 'width: 100%;'
  .span6.stretch-container
    #note-preview.paper-container