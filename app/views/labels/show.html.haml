#dashboard.row
  = render 'dashboard/sidebar'
  .span9.stretch-container
    #dashboard-main
      #dashboard-label-header
        = @label.name
        - if !@label.id.nil?
          .pull-right
            %a{href: root_path}
              %i.icon-trash
      #dashboard-note-list
        - if @notes.empty?
          #no-labels
            This label is empty
        - else
          - @notes.each do |note|
            = render 'dashboard/note', note: note
          = will_paginate @notes, class: 'pagination pagination-centered'